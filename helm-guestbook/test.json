{
  "apiVersion" : "apps/v1",
  "kind" : "Deployment",
  "metadata" : {
    "name" : "harness-test-app"
  },
  "spec" : {
    "replicas" : 2,
    "template" : {
      "spec" : {
        "containers" : [ {
          "name" : "main-container",
          "image" : "nginx:1.21",
          "args" : [ "--config=\"/etc/app/config.yaml\" --debug=true" ],
          "command" : [ "/bin/sh", "-c" ],
          "ports" : [ {
            "containerPort" : 80
          } ],
          "env" : [ {
            "name" : "ENABLE_LOGS",
            "value" : "true"
          } ]
        } ]
      }
    }
  }
}
